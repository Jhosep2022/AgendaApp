<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tituloNotaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la Nota"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/oswald" />

        <TextView
            android:id="@+id/descripcionNotaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de la Nota"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:fontFamily="@font/oswald"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/fechaCulminacionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Culminación"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:fontFamily="@font/oswald"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/estadoNotaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No finalizado"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:fontFamily="@font/oswald"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/importantButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart_outline"
            android:layout_gravity="end"
            android:contentDescription="Marcar como importante"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
